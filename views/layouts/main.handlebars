<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Merchant Cart</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body>

    <!-- ðŸ” Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">

        <div class="collapse navbar-collapse">
          <ul class="navbar-nav me-auto">

            <!-- Visible to ALL logged-in users -->
            {{#if user}}
              {{#if (eq user.role "customer")}}
                <li class="nav-item">
                  <a class="nav-link" href="/products">Products</a>
                </li>

                <li class="nav-item">
                  <a href="/admin/customers" class="nav-link">
                    Customers
                  </a>
                </li>

                <li class="nav-item">
                  <a class="nav-link" href="/orders">My Orders</a>
                </li>

              {{/if}}
            {{/if}}
            <!-- Admin-only links -->
            {{#if user}}
              {{#if (eq user.role "admin")}}
                <li class="nav-item">
                  <a class="nav-link text-warning" href="/admin/products">
                    Manage Products
                  </a>
                </li>

                <li class="nav-item">
                  <a class="nav-link text-warning" href="/admin/customers">
                    Manage Customers
                  </a>
                </li>
              {{/if}}
            {{/if}}

          </ul>

          <ul class="navbar-nav ms-auto">
            {{#if user}}
              <li class="nav-item">
                <span class="navbar-text me-3">
                  Welcome,
                  {{#if (eq user.role "admin")}}
                    Admin
                    {{user.name}}
                  {{else}}
                    {{user.name}}
                  {{/if}}

                </span>
              </li>
              <li class="nav-item">
                <a class="btn btn-danger btn-sm" href="/logout">
                  Logout
                </a>
              </li>
            {{else}}
              <li class="nav-item">
                <a class="btn btn-primary btn-sm" href="/login">
                  Login
                </a>
              </li>
            {{/if}}
          </ul>

        </div>
      </div>
    </nav>

    <div class="container mt-4">
      {{{body}}}
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    >
    </script>

  </body>
</html>