<div class="container mt-4">

  <h3 class="mb-3">All Customers</h3>

  <table class="table table-striped table-bordered shadow">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>View Orders</th>
      </tr>
    </thead>
    <tbody>
      {{#each customers}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.username}}</td>
          <td>
            <a
              href="/admin/customers/{{this._id}}/orders"
              class="btn btn-sm btn-primary"
            >
              View Orders
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

</div>